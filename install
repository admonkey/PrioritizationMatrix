#!/bin/bash

# stop script on error
set -e

# get parameters
usage() {
  echo "Usage: ${BASH_SOURCE[0]}
    environment: -e <dev|prod>
  " 1>&2
  exit 1
}
while getopts "e:s:n:" o; do
  case "${o}" in
    e)
      ENVIRONMENT=${OPTARG}
      [ "$ENVIRONMENT" == "dev" ] || [ "$ENVIRONMENT" == "travis" ] || [ "$ENVIRONMENT" == "prod" ] || usage
      ;;
    *)
      usage
      ;;
esac
done
shift $((OPTIND-1))
if [ -z "${ENVIRONMENT+x}" ]; then
  usage
fi

# move to working directory
cd $( dirname "${BASH_SOURCE[0]}" )
project_root=$(pwd)

# get composer if not already downloadeded
if [ ! -f composer.phar ]; then
  wget https://getcomposer.org/download/1.1.2/composer.phar
fi

if [ "$ENVIRONMENT" == "dev" ]; then

  php composer.phar install
  cd tests
  ../vendor/jeff-puckett/mysql-dtp/create_db_users.bash -e test -n pm
  cd "$project_root"

elif [ "$ENVIRONMENT" == "travis" ]; then

  php composer.phar install
  cd tests
  ../vendor/jeff-puckett/mysql-dtp/create_db_users.bash -e test -n pm -u root
  cd "$project_root"

elif [ "$ENVIRONMENT" == "prod" ]; then

  php composer.phar install --no-dev

fi
